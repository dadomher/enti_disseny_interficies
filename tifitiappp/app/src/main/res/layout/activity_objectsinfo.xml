<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popup_window"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom|center"
    android:background="@color/Tertiary"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/medium_margin"
        android:layout_marginHorizontal="@dimen/medium_margin"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_tv"
            android:textStyle="bold"
            android:textColor="@color/Secundary_2"
            android:textSize="@dimen/titleSize"/>
        <Button
            android:id="@+id/cerrar_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@color/Secundary_2"
            android:text="@string/cerrar_bt" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/medium_margin"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/bonus1_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/bonus2_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/pasiva_tv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="@string/pasiva_tv"
            android:textStyle="italic"
            android:textColor="@color/Secundary_2"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/small_margin"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/url_img"
            android:layout_width="@dimen/imgUrl_size"
            android:layout_height="@dimen/imgUrl_size"
            android:layout_margin="@dimen/small_margin"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/subItem_1"
                android:layout_width="@dimen/subItem_size"
                android:layout_height="@dimen/subItem_size"
                android:layout_margin="@dimen/small_margin"/>

            <ImageView
                android:id="@+id/subItem_2"
                android:layout_width="@dimen/subItem_size"
                android:layout_height="@dimen/subItem_size"
                android:layout_margin="@dimen/small_margin"/>
        </LinearLayout>

        <TextView
            android:id="@+id/description_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginHorizontal="@dimen/small_margin"
            android:text="@string/description_tv"
            android:textColor="@color/Secundary"/>
    </LinearLayout>
</LinearLayout>
